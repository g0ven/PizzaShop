<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.pizzasp.ics.mybatis.AccessDataMapper">

    <select id="isExistIngredient" parameterType="java.lang.Long" resultType="java.lang.Boolean">
        SELECT EXISTS(SELECT 1 FROM ingredients WHERE ingredients.id=#{0})
    </select>

    <select id="isExistBasisPizza" parameterType="java.lang.Long" resultType="java.lang.Boolean">
        SELECT EXISTS(SELECT 1 FROM basis_pizza WHERE basis_pizza.id=#{0})
    </select>

    <select id="isExistGoodPizza" parameterType="java.lang.Long" resultType="java.lang.Boolean">
        SELECT EXISTS(SELECT 1 FROM good_pizza WHERE good_pizza.id=#{0})
    </select>


</mapper>